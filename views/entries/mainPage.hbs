 
  <div class="searchFormDiv">

  <form method="POST" action="/word" class="searchForm">
    <div class="container-input">
      <input id="text" class="form-control inputText" name="word" placeholder="Что будем искать?" type="text">
      <input id="text" class="form-control inputText" name="wordException" placeholder="А что не будем искать?" type="text">
      {{#if username}}
       <input type="submit" class="btn btn-primary" value="Найти"></input>
       {{else}}
       <a href="#okno" class="btn btn-primary">Найти</a>
       <div id="okno">Чтобы воспользоваться поиском, <a href="/auth/signup">зарегистрируйтесь</a> или <a href="/auth/signin">авторизуйтесь</a></div> 
       {{/if}}
    </div>
  </form>

</div>





<div class="cardList">
  {{#each articles}}

  <div class="articleCard">
    <h3>{{this.title}}</h3>
    <img src="{{this.urlToImage}}" width="100%" />
    <p>{{this.description}}</p>
    <a href="{{this.url}}">Перейти к источнику</a>
  </div>
  
  {{/each}}
</div>
